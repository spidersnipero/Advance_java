<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
  <display-name>Archetype Created Web Application</display-name>
  <!-- home -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.example.myserverlets.HomeServe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/rails</url-pattern>
    </servlet-mapping>

  <!-- loginpage -->
    <!-- user -->
    <servlet>
        <servlet-name>UserLoginPageServlet</servlet-name>
        <servlet-class>com.example.myserverlets.UserLoginServe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLoginPageServlet</servlet-name>
        <url-pattern>/userlogin</url-pattern>
    </servlet-mapping>

    <!-- admin -->
    <servlet>
        <servlet-name>AdminLoginPageServlet</servlet-name>
        <servlet-class>com.example.myserverlets.AdminLoginServe</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginPageServlet</servlet-name>
        <url-pattern>/adminlogin</url-pattern>
    </servlet-mapping>



<!-- login -->
    <!-- user -->
    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.example.myserverlets.LoginControl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <!-- admin -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.example.myserverlets.LoginControl</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

</web-app>

